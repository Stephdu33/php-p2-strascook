{% extends "layout.html.twig" %}

{% block content %}
	<div uk-grid>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<h3 class="uk-card-title">Base de données</h3>
				<a class="uk-button uk-button-primary" href="/Admin/menus/new2049">ajouter un nouveau menu</a>
				<table class="uk-table uk-table-hover uk-table-divider">
					<thead>
						<tr>
							<th>id</th>
							<th>name</th>
							<th>description</th>
							<th>prix</th>
							<th>photo</th>
						</tr>
					</thead>

					<tbody>
						{% for i in menus %}
							<tr>
								<th>{{i.id}}</th>
								<th>{{i.nom}}</th>
								<th>{{i.description}}</th>
								<th>{{i.prix}}</th>
								<th>
									<img</a src="../../{{i.photo}}" width="128rem" alt="{{i.nom}}" /</th> <td> <a href="" uk-icon="icon: pencil">>
										<a href="" uk-icon="icon: trash"></a>
									</td>
								</th>
							</tr>
						{% else %}
							<td>td colspan="">pas de donnée</td>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
