{% extends "admin.html.twig" %}

{% block content %}
	<div uk-grid>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<h3 class="uk-card-title">Vos contacts</h3>
				<table id="example" class="uk-table uk-table-hover uk-table-divider">
					<thead>
						<tr>
							<th>nom</th>
							<th>prenom</th>
							<th>email</th>
							<th>tel</th>
							<th>message</th>
						</tr>
					</thead>

					<tbody>
						{% for contactAdmin in contactAdmins %}
							<tr>
								<td>{{ contactAdmin.nomcontact }}</td>
								<td>{{ contactAdmin.prenomcontact }}</td>
								<td>{{ contactAdmin.emailcontact }}</td>
								<td>{{ contactAdmin.telcontact }}</td>
								<td>{{ contactAdmin.messagecontact }}</td>
								<td>
									<a href="/admin/contactAdmin/delete?id={{ contactAdmin.id }}" uk-icon="icon: trash"></a>
								</td>
							</tr>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">Pas de donn√©e</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>{% endblock %}{% block javascript %}
{{ parent()}}
<script>
	new DataTable('#example');
</script>{% endblock %}
